Options +FollowSymLinks -MultiViews
RewriteEngine On
RewriteBase /

# 1. Redirecionar acesso direto a .php para URL sem extensão (estético)
# MAS NÃO redirecionar requisições POST (formulários/login) para não perder dados!
RewriteCond %{REQUEST_METHOD} !POST
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# 2. Reescrever URL sem extensão para o arquivo .php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]
